<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN, cannot be changed between the plugin versions. -->
    <id>sun.shogun.sklearn-tools</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Sklearn-tools</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
<!--    <vendor url="https://www.yourcompany.com">YourCompany</vendor>-->

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        A small plugin for quickly training models using the sklearn library.
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->

    <depends>com.intellij.modules.json</depends>
    <depends>com.intellij.modules.xml</depends>
    <depends>PythonCore</depends>
    <!-- Extensions defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <group
            id="ShogunSun.ActionsGroup"
            text="Sklearn tools"
            description="Actions for Sklern-tools plugin"
            popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </group>

        <!-- Подгруппа для препроцессинга -->
        <group
            id="ShogunSun.PreprocessingGroup"
            text="Preprocessing"
            description="Dataset preprocessing actions"
            popup="true">
            <add-to-group group-id="ShogunSun.ActionsGroup" anchor="last"/>
        </group>

        <!-- Остальные действия -->
        <action class="sun.shogun.sklearntools.CreateRequirementsTxt"
            id="sun.shogun.sklearntools.CreateRequirementsTxt"
            text="Create base requirements.txt"
            description="Insert imports in file and create requirements.txt">
            <add-to-group group-id="ShogunSun.ActionsGroup" anchor="last"/>
        </action>

        <!-- Действия по препроцессингу теперь добавляем в подгруппу -->
        <action class="sun.shogun.sklearntools.InsertDatasetLoader"
            id="sun.shogun.sklearntools.InsertDatasetLoader"
            text="Load dataset"
            description="Insert codeblock for load dataset">
            <add-to-group group-id="ShogunSun.PreprocessingGroup" anchor="last"/>
        </action>

        <action class="sun.shogun.sklearntools.InsertDatasetPreprocessingTemplate"
            id="sun.shogun.sklearntools.InsertDatasetPreprocessingTemplate"
            text="Dataset preprocessing"
            description="Dataset Preprocessing">
            <add-to-group group-id="ShogunSun.PreprocessingGroup" anchor="last"/>
        </action>

        <action class="sun.shogun.sklearntools.InsertOutlierDetectionTemplate"
            id="sun.shogun.sklearntools.InsertOutlierDetectionTemplate"
            text="OutlierDetection"
            description="Template for outlier detection">
            <add-to-group group-id="ShogunSun.PreprocessingGroup" anchor="last"/>
        </action>

        <action class="sun.shogun.sklearntools.InsertFeatureEncodingTemplate"
            id="sun.shogun.sklearntools.InsertFeatureEncodingTemplate"
            text="Encoding Template"
            description="Template for encoding">
            <add-to-group group-id="ShogunSun.PreprocessingGroup" anchor="last"/>
        </action>

        <action class="sun.shogun.sklearntools.InsertFeatureSelectionTemplate"
            id="sun.shogun.sklearntools.InsertFeatureSelectionTemplate"
            text="Feature Selection Template"
            description="Feature Selection Template">
            <add-to-group group-id="ShogunSun.ActionsGroup"/>
        </action>

        <action class="sun.shogun.sklearntools.InsertModelTrainingTemplate"
            id="sun.shogun.sklearntools.InsertModelTrainingTemplate"
            text="Model Training"
            description="Model Training Template">
            <add-to-group group-id="ShogunSun.ActionsGroup"/>
        </action>
    </actions>

</idea-plugin>